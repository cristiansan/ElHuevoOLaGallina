    <ImageView
        android:id="@+id/activity_main_imageview_tira_violeta"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/tira_violeta"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/activity_main_imageview_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_main_imageview_logo"
        android:scaleType="fitXY"
        android:src="@drawable/actionbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/activity_main_imageview_logo"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/activity_main_imageview_tira_violeta"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/activity_main_imageview_caja_de_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_main_imageview_tira_violeta"
        android:layout_alignStart="@+id/activity_main_imageview_tira_violeta"
        android:layout_below="@+id/activity_main_imageview_tira_violeta"
        android:paddingBottom="20dp"
        android:src="@drawable/caja_de_pregunta"
        android:layout_alignRight="@+id/activity_main_imageview_boton_si"
        android:layout_alignEnd="@+id/activity_main_imageview_boton_si"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/activity_main_imageview_boton_no"
        android:layout_width="175dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.0"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp" />

    <Button
        android:id="@+id/activity_main_imageview_boton_si"
